# LightRAG API
RAGCHECKER_LIGHTRAG_URL=http://lightrag:9622
RAGCHECKER_LIGHTRAG_API_KEY=

# Query-Parameter
RAGCHECKER_QUERY_MODE=hybrid       # local | global | hybrid | naive | mix
RAGCHECKER_TOP_K=10                # Anzahl Top-Entitäten/Relationen
RAGCHECKER_RUNS_PER_TESTCASE=3    # Anzahl Läufe je Testfall (für statistische Auswertung)

# Testfälle
RAGCHECKER_TESTCASES_PATH=testcases/fall1.yaml

# Reports
RAGCHECKER_OUTPUT_PATH=reports

# Modus: evaluate (normaler Testlauf) | compare (Vergleichsreport über alle Läufe)
RAGCHECKER_MODE=evaluate

# Run-Metadaten für Vergleichsreport
# Label: kurzer Name für diesen Parametersatz, z.B. "hybrid_chunk512_thresh07"
RAGCHECKER_RUN_LABEL=
# Parameter: beliebige Key=Value-Paare, kommagetrennt
# Beispiel: chunk_size=512,similarity_threshold=0.7,embedding_model=text-ada-002
RAGCHECKER_RUN_PARAMETERS=CHUNK_TOP_K=10,MIN_RERANK_SCORE=0.3
